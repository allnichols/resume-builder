<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/layout/head') %>
  <body>
    <div class="container-fluid position-fixed top-0 bottom-0">
      <div class="row justify-content-between h-100">
        <div class="col-4">
          <h3>Personal Details</h2>
          <div class="row mb-4">
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="role"
                name="role"
                placeholder="Desired Role"
                aria-label="desired role"
                value="<%= resume.role %>"
                hx-put="resume/role"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Full Name"
                aria-label="Full Name"
                value="<%= resume.name %>"
                hx-put="resume/name"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="email"
                name="email"
                placeholder="Email"
                aria-label="Email"
                value="<%= resume.email %>"
                hx-put="resume/email"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                placeholder="Phone"
                aria-label="Phone"
                value="<%= resume.phone %>"
                hx-put="resume/phone"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="country"
                name="country"
                placeholder="Country"
                aria-label="Country"
                value="<%= resume.country %>"
                hx-put="resume/country"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
            <div class="col">
              <input
                type="text"
                class="form-control"
                id="location"
                name="location"
                placeholder="Ex. Houston, TX"
                aria-label="location"
                value="<%= resume.location %>"
                hx-put="resume/location"
                hx-trigger="keyup changed delay:750ms"
              />
            </div>
          </div>
        </div>
        <div class="col-6 bg-secondary">
          <div
            class="d-flex justify-content-center align-items-center position-relative h-100 mx-auto"
          >
            <div class="bg-white rounded-1 canvas position-relative">
              <canvas id="canvas-1" class="pdf-canvas"></canvas>
              <canvas id="canvas-2" class="pdf-canvas"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="js/htmx/htmx.min.js"></script>
    <script type="module" src="js/scripts/initialResumeFetch.js"></script>
    <script type="module" src="js/scripts/fetchResumeChange.js"></script>
  </body>
</html>
